{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rebaseWhen": "behind-base-branch",
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "prCreation": "not-pending",
  "internalChecksAsSuccess": true,
  "packageRules": [
    {
      "description": "Use the OpenTofu registry for Terraform providers and modules",
      "matchDatasources": ["terraform-provider", "terraform-module"],
      "registryUrls": ["https://registry.opentofu.org"]
    },
    {
      "description": "Configure versioning for Calibre Web Automated Docker image",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/crocodilestick/calibre-web-automated"],
      "versioning": "regex:^V?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "description": "Group Immich Docker images",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/immich-app/**"],
      "groupName": "immich"
    },
    {
      "description": "Enforce minimum age for certain Terraform providers",
      "matchDatasources": ["terraform-provider"],
      "matchPackageNames": [
        "github"
      ],
      "minimumReleaseAge": "7 days"
    }
  ],
  "kubernetes": {
    "managerFilePatterns": ["/flux/.+\\.ya?ml$/"]
  },
  "flux": {
    "enabled": false
  },
  "ignoreDeps": [
    "ghcr.io/fluxcd/helm-controller",
    "ghcr.io/fluxcd/image-automation-controller",
    "ghcr.io/fluxcd/image-reflector-controller",
    "ghcr.io/fluxcd/kustomize-controller",
    "ghcr.io/fluxcd/notification-controller",
    "ghcr.io/fluxcd/source-controller"
  ]
}
